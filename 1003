import java.util.Scanner;

public class Soma{
	public static void main(String[] args) {
		Scanner ler = new Scanner(System.in);
		double a,b,soma;

		System.out.println("Digite o valor de A:");
		a = ler.nextDouble();
		System.out.println("Digite o valor de B:");
		b = ler.nextDouble();

		soma = a + b;
		System.out.println("SOMA = " + soma);
	}

}
