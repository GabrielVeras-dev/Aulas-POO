import java.util.Scanner;

public class Area{
	public static void main(String[] args) {
		
		Scanner ler = new Scanner(System.in);
		double n = 3.14159;
		double  raio,area;
		

		System.out.println ("Digite o valor do raio:");
		raio = ler.nextInt();

		area = n * (raio * raio);
		System.out.println("Valor da area =" + area);

	}
}
